<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IdeaLab" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bgColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/bgColor</item>
        <!-- Status bar -->
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="android:divider">@drawable/menu_item_padding</item>
        <item name="android:listDivider">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.IdeaLab.Full" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/bgColor</item>


    </style>
</resources>